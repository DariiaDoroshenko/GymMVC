            Приєднуйся до нашої спільноти та досягни найкращої версії себе!
        </p>
        <a href="/Schedule/Index" class="btn-hero">Переглянути розклад</a>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>



    <div class="container text-center my-5">
        <h2 class="mb-4">Статистика відвідувань</h2>
        <canvas id="visitsChart" height="120"></canvas>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", async () => {
        const response = await fetch('/Home/GetTrainingStats');
        const data = await response.json();


        const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];
        const hours = Array.from({ length: 14 }, (_, i) => i + 6); 

        const matrix = hours.map(hour => {
        return days.map(day => {
        const match = data.find(d => d.day === day && d.hour === hour);
        return match ? match.count : 0;
        });
        });


        new Chart(document.getElementById("visitsChart"), {
        type: 'bar',
        data: {
        labels: hours.map(h => `${h}:00`),
        datasets: days.map((day, i) => ({
        label: day,
        data: matrix.map(row => row[i]),
        backgroundColor: `hsl(${i * 50}, 70%, 50%)`,
        stack: 'combined'
        }))
        },
        options: {
        responsive: true,
        plugins: {
        title: {
        display: true,

        color: 'white'
        },
        legend: {
        labels: {
        color: 'white'
        }
        }
        },
        scales: {
        x: {
        stacked: true,
        ticks: { color: 'white' }
        },
        y: {
        stacked: true,
        ticks: { color: 'white' }
        }
        }
        }
        });
        });
    </script>



