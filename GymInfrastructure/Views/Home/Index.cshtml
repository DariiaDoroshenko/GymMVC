<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
    background-color: #0d0d0d;
    color: #f5f5f5;
    font-family: 'Poppins', sans-serif;
    }

    /* HERO SECTION */
    .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    overflow: hidden;
    }

    /* --- Відео фон --- */
    .hero video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    filter: brightness(0.4);
    }

    .hero .content {
    position: relative;
    z-index: 2;
    max-width: 700px;
    padding: 20px;
    }

    .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    }

    .hero p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    }

    .btn-hero {
    background-color: #ff4500;
    border: none;
    color: white;
    padding: 12px 30px;
    font-size: 1.1rem;
    border-radius: 30px;
    transition: 0.3s;
    }

    .btn-hero:hover {
    background-color: #ff6622;
    transform: scale(1.05);
    }

    /* TRAINERS SCROLL */
    .trainers-section {
    padding: 60px 0;
    }

    .trainers-scroll {
    display: flex;
    overflow-x: auto;
    gap: 20px;
    scroll-behavior: smooth;
    padding: 20px;
    }

    .trainer-card {
    flex: 0 0 auto;
    background-color: #1a1a1a;
    border-radius: 15px;
    overflow: hidden;
    width: 260px;
    box-shadow: 0 0 10px rgba(255, 69, 0, 0.3);
    transition: 0.3s;
    }

    .trainer-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 20px rgba(255, 69, 0, 0.5);
    }

    .trainer-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    }

    .trainer-card .card-body {
    padding: 15px;
    text-align: center;
    }

    .trainer-card h5 {
    margin-bottom: 10px;
    font-size: 1.1rem;
    }

    .trainer-card a {
    color: #ff4500;
    text-decoration: none;
    font-weight: 500;
    }

    .trainer-card a:hover {
    text-decoration: underline;
    }
</style>


