@model GymDomain.Model.Training
@{
    ViewData["Title"] = Model.Title;
}

<style>
    body {
        background-color: #0d0d0d;
        color: #f5f5f5;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        margin-top: 80px;
    }

    h2 {
        color: #ff4500;
        font-weight: 700;
        margin-bottom: 20px;
        letter-spacing: 0.5px;
    }

    .text-muted {
        color: #ccc !important;
        font-size: 1.05rem;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .training-img {
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(255, 69, 0, 0.3);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .training-img:hover {
            transform: scale(1.03);
            box-shadow: 0 0 40px rgba(255, 69, 0, 0.6);
        }

    p strong {
        color: #ff4500;
    }

    .btn-primar {
        background-color: #ff4500;
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        font-weight: 600;
        font-size: 1.05rem;
        transition: all 0.3s ease;
        box-shadow: 0 0 15px rgba(255, 69, 0, 0.4);
    }

        .btn-primar:hover {
            background-color: #ff5c1f;
            transform: scale(1.05);
            box-shadow: 0 0 25px rgba(255, 69, 0, 0.6);
        }

    @@media (max-width: 768px) {
        .container

    {
        margin-top: 40px;
    }

    .training-img {
        margin-bottom: 20px;
    }

    }
</style>

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="@Model.PhotoUrl" alt="@Model.Title" class="img-fluid training-img" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p class="text-muted">@Model.Description</p>

            <p><strong>Ціна:</strong> @Model.Price грн</p>
            <p><strong>Тривалість:</strong> @(Model.DurationMinutes ?? 60) хв</p>

            <a asp-action="ScheduleByType"
               asp-route-title="@Model.Title"
               class="btn btn-primar mt-3">
                Переглянути вільний час
            </a>
        </div>
    </div>
</div>

