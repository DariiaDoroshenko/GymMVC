@model GymInfrastructure.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<style>
    body {
        background-color: #0d0d0d;
        color: #f5f5f5;
        font-family: 'Poppins', sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-box {
        background-color: #1a1a1a;
        padding: 60px 70px;
        border-radius: 20px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 0 25px rgba(255, 69, 0, 0.3);
        text-align: center;
        animation: fadeIn 0.6s ease-in-out;
    }

        .login-box h2 {
            color: #ff4500;
            margin-bottom: 35px;
            font-weight: 700;
            font-size: 2rem;
        }

    .form-group label {
        display: block;
        margin-bottom: 10px;
        font-weight: 500;
        font-size: 1.05rem;
    }

    .form-control {
        background-color: #2a2a2a;
        border: none;
        color: #f5f5f5;
        padding: 15px;
        border-radius: 12px;
        width: 100%;
        margin-bottom: 25px;
        font-size: 1rem;
        transition: 0.3s;
    }

        .form-control:focus {
            background-color: #333;
            outline: none;
            box-shadow: 0 0 10px #ff4500;
        }

    .btn-login {
        background-color: #ff4500;
        border: none;
        color: white;
        padding: 15px 25px;
        font-size: 1.2rem;
        border-radius: 40px;
        transition: 0.3s;
        width: 100%;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

        .btn-login:hover {
            background-color: #ff6622;
            transform: scale(1.03);
            box-shadow: 0 0 15px rgba(255, 102, 34, 0.5);
        }

    .form-check {
        text-align: left;
        margin-bottom: 20px;
    }

    .form-check-input {
        margin-right: 8px;
        accent-color: #ff4500;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.95rem;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="login-container">
    <div class="login-box">
        <h2>Вхід до акаунту</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <input type="hidden" asp-for="ReturnUrl" />

            <button type="submit" class="btn-login">Увійти</button>
        </form>

        <!-- ОКРЕМА ФОРМА для Google -->
        <form asp-controller="Account" asp-action="ExternalLogin" method="post">
            <input type="hidden" name="provider" value="Google" />
            <button type="submit" class="btn-login" style="background-color:#db4437; margin-top:15px;">
                <i class="fab fa-google"></i> Увійти за допомогою Google
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
