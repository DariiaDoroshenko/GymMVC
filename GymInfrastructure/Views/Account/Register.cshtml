@model GymInfrastructure.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Реєстрація";
}

<style>
    body {
        background-color: #0d0d0d;
        color: #f5f5f5;
        font-family: 'Poppins', sans-serif;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .register-box {
        background-color: #1a1a1a;
        padding: 60px 70px;
        border-radius: 20px;
        width: 100%;
        max-width: 650px;
        box-shadow: 0 0 25px rgba(255, 69, 0, 0.3);
        text-align: center;
        animation: fadeIn 0.6s ease-in-out;
    }

        .register-box h2 {
            color: #ff4500;
            margin-bottom: 35px;
            font-weight: 700;
            font-size: 2rem;
        }

    .form-group {
        text-align: left;
        margin-bottom: 25px;
    }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 500;
            font-size: 1.05rem;
        }

    .form-control {
        background-color: #2a2a2a;
        border: none;
        color: #f5f5f5;
        padding: 15px;
        border-radius: 12px;
        width: 100%;
        font-size: 1rem;
        transition: 0.3s;
    }

        .form-control:focus {
            background-color: #333;
            outline: none;
            box-shadow: 0 0 10px #ff4500;
        }

    .btn-register {
        background-color: #ff4500;
        border: none;
        color: white;
        padding: 15px 25px;
        font-size: 1.2rem;
        border-radius: 40px;
        transition: 0.3s;
        width: 100%;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-top: 10px;
    }

        .btn-register:hover {
            background-color: #ff6622;
            transform: scale(1.03);
            box-shadow: 0 0 15px rgba(255, 102, 34, 0.5);
        }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.95rem;
    }

    .login-link {
        margin-top: 20px;
        display: block;
        color: #ff4500;
        text-decoration: none;
        font-weight: 500;
        transition: 0.3s;
    }

        .login-link:hover {
            color: #ff6622;
            text-decoration: underline;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="register-container">
    <div class="register-box">
        <h2>Створити акаунт</h2>

        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-register">Зареєструватися</button>

            <a asp-controller="Account" asp-action="Login" class="login-link">
                Уже маєш акаунт? Увійди тут
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
