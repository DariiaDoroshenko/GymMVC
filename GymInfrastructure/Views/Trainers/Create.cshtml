@model GymDomain.Model.Trainer
@{
    ViewData["Title"] = "Додати тренера";
}

<style>
    body {
        background-color: #0d0d0d;
        color: #f5f5f5;
        font-family: 'Poppins', sans-serif;
    }

    h2 {
        text-align: center;
        color: #ff4500;
        font-weight: 700;
        margin-bottom: 40px;
        letter-spacing: 1px;
    }

    form.card {
        max-width: 650px;
        margin: 0 auto;
        background-color: #1a1a1a;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 0 25px rgba(255, 69, 0, 0.25);
        transition: 0.3s;
    }

        form.card:hover {
            box-shadow: 0 0 35px rgba(255, 69, 0, 0.4);
        }

    .form-label {
        color: #ff6622;
        font-weight: 600;
    }

    .form-control {
        background-color: #121212;
        border: 1px solid #333;
        color: #f5f5f5;
        border-radius: 10px;
        padding: 12px;
        transition: all 0.3s;
    }

        .form-control:focus {
            background-color: #1e1e1e;
            border-color: #ff4500;
            box-shadow: 0 0 10px rgba(255, 69, 0, 0.5);
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #ff4500;
        border: none;
        font-weight: 600;
        padding: 10px 25px;
        border-radius: 25px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #ff6622;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #333;
        border: none;
        color: #ccc;
        border-radius: 25px;
        padding: 10px 25px;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background-color: #444;
            color: white;
            transform: scale(1.05);
        }
</style>

<h2>Додати нового тренера</h2>

<form asp-action="Create" method="post" class="card">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Ім’я</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Прізвище</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Телефон</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Specialization" class="form-label">Спеціалізація</label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhotoUrl" class="form-label">Посилання на фото</label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary me-3">Зберегти</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
