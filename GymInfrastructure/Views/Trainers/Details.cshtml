@model GymDomain.Model.Trainer
@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}

<div class="trainer-details-container">
    <div class="trainer-card-details">
        <div class="row g-4 align-items-center">
            <div class="col-md-5">
                <div class="trainer-photo-wrapper">
                    <img src="@Model.PhotoUrl" alt="@Model.FirstName" class="trainer-photo" />
                </div>
            </div>
            <div class="col-md-7">
                <h2 class="trainer-name">@Model.FirstName @Model.LastName</h2>
                <p class="trainer-field"><strong>Спеціалізація:</strong> @Model.Specialization</p>
                <p class="trainer-field"><strong>Email:</strong> @Model.Email</p>
                <p class="trainer-field"><strong>Телефон:</strong> @Model.Phone</p>

                <a asp-action="Schedule" asp-route-id="@Model.Id" class="btn btn-orange mt-3">
                    Переглянути розклад
                </a>

                @if (User.IsInRole("admin"))
                {
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Видалити</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Poppins', sans-serif;
    }

    .trainer-details-container {
        margin-top: 120px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px;
    }

    .trainer-card-details {
        background: rgba(30, 30, 30, 0.9);
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(255, 69, 0, 0.25);
        padding: 40px;
        max-width: 1000px;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .trainer-card-details:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(255, 69, 0, 0.35);
        }

    .trainer-photo-wrapper {
        overflow: hidden;
        border-radius: 16px;
        box-shadow: 0 0 20px rgba(255, 69, 0, 0.3);
    }

    .trainer-photo {
        width: 100%;
        height: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 16px;
        transition: transform 0.5s ease;
    }

    .trainer-photo-wrapper:hover .trainer-photo {
        transform: scale(1.05);
    }

    .trainer-name {
        color: #ff4500;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .trainer-field {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .btn-orange {
        background-color: #ff4500;
        border: none;
        color: white;
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-orange:hover {
            background-color: #ff6622;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .trainer-card-details

    {
        padding: 25px;
    }

    .trainer-name {
        font-size: 1.5rem;
    }

    }
</style>
