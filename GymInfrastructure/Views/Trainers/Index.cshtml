@model IEnumerable<GymDomain.Model.Trainer>
@{
    ViewData["Title"] = "Тренери";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-5">
    <h2 class="text-white fw-bold mb-0">Наші тренери</h2>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Create" class="btn btn-add-trainer">
            + Додати тренера
        </a>
    }
</div>

<div class="row g-4">
    @foreach (var t in Model)
    {
        <div class="col-md-4 col-sm-6">
            <a asp-action="Details" asp-route-id="@t.Id" class="trainer-card-link">
                <div class="trainer-card">
                    <div class="trainer-img-container">
                        <img src="@t.PhotoUrl" alt="@t.FirstName" class="trainer-img" />
                    </div>
                    <div class="trainer-info">
                        <h5>@t.FirstName @t.LastName</h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
    }

    .btn-add-trainer {
        background-color: #ff4500;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px 22px;
        transition: all 0.3s ease;
    }

        .btn-add-trainer:hover {
            background-color: #ff6622;
            transform: translateY(-2px);
        }

    .trainer-card-link {
        text-decoration: none;
        color: inherit;
    }

    .trainer-card {
        position: relative;
        overflow: hidden;
        border-radius: 16px;
        background: rgba(30, 30, 30, 0.85);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .trainer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(255, 69, 0, 0.3);
        }

    .trainer-img-container {
        height: 250px;
        overflow: hidden;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
    }

    .trainer-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .trainer-card:hover .trainer-img {
        transform: scale(1.08);
    }

    .trainer-info {
        background-color: rgba(0, 0, 0, 0.75);
        padding: 14px;
        text-align: center;
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-bottom-left-radius: 16px;
        border-bottom-right-radius: 16px;
    }

        .trainer-info h5 {
            margin: 0;
            color: #ff4500;
            font-size: 1.2rem;
        }

    @@media (max-width: 768px) {
        .trainer-card

    {
        border-radius: 12px;
    }

    .trainer-img-container {
        height: 200px;
    }

    .trainer-info h5 {
        font-size: 1rem;
    }

    }
</style>
