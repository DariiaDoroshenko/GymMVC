@model GymDomain.Model.Training
@{
    ViewData["Title"] = "Деталі заняття";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
    }

    .training-details {
        background: rgba(30, 30, 30, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
        padding: 40px;
        margin-top: 60px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .training-details:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.6);
        }

        .training-details h2 {
            color: #ff4500;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .training-details p {
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        .training-details strong {
            color: #ff6622;
        }

        .training-details img {
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .training-details .btn {
            font-weight: 600;
            border-radius: 8px;
            padding: 10px 20px;
            transition: all 0.3s;
        }

    .btn-secondary {
        background-color: #333;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #444;
            transform: translateY(-2px);
        }

    .btn-succes {
        
        background-color: #ff4500;
        border: none;
    }

        .btn-succes:hover {
            background-color: #ff6622;
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .training-details

    {
        padding: 25px;
    }

    }
</style>

<div class="container training-details">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="@Model.PhotoUrl" alt="@Model.Title" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p >@Model.Description</p>

            <p><strong>Тренер:</strong> @Model.Trainer.FirstName @Model.Trainer.LastName</p>
            <p><strong>Дата:</strong> @Model.Date.ToString("dd.MM.yyyy")</p>
            <p><strong>Час:</strong> @Model.StartTime.ToString("HH:mm")</p>
            <p><strong>Тривалість:</strong> @(Model.DurationMinutes ?? 60) хв</p>
            <p><strong>Ціна:</strong> @Model.Price грн</p>

            <div class="mt-4">
                <a asp-action="Index" asp-route-date="@Model.Date.ToString("yyyy-MM-dd")" class="btn btn-secondary me-2">Назад</a>
                @if (User.IsInRole("user"))
                {
                    <a asp-controller="TrainingRegistration" asp-action="Register" asp-route-trainingId="@Model.Id" class="btn btn-succes">
                        Записатись
                    </a>
                }
            </div>
        </div>
    </div>
</div>
