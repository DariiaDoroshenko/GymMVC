<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Energy Gym</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymInfrastructure.styles.css" asp-append-version="true" />

    <style>
      
        html, body {
            height: 100%;
            margin: 0;
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column; /* щоб футер був знизу */
        }

        main {
            flex: 1; /* головний контент займає все вільне місце */
            padding-top: 160px; /* ВІДСТУП ПІД ВИСОКУ ШАПКУ */
        }

        .navbar {
            background-color: rgba(18, 18, 18, 0.85);
            backdrop-filter: blur(8px);
            height: 120px;
            padding: 25px 60px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand {
            color: #fff !important;
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 1px;
            transition: color 0.3s;
        }

            .navbar-brand:hover {
                color: #ff4500 !important;
            }

        .nav-link {
            color: #bbb !important;
            font-size: 1.2rem;
            margin: 0 18px;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #ff4500 !important;
            }

        .auth-buttons {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .auth-buttons a,
            .auth-buttons form input[type="submit"] {
                background-color: #ff4500;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 8px;
                font-weight: 600;
                transition: all 0.3s;
            }

                .auth-buttons a:hover,
                .auth-buttons form input[type="submit"]:hover {
                    background-color: #ff6622;
                    transform: translateY(-2px);
                }

        footer {
            background-color: rgba(18, 18, 18, 0.95);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: #999;
            padding: 25px 0;
            text-align: center;
            margin-top: auto; /* щоб приликався до низу */
        }

            footer a {
                color: #ff4500;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 768px) {
            .navbar {
                padding: 15px 25px;
                height: auto;
                flex-direction: column;
                align-items: flex-start;
            }

            .nav-link {
                margin: 8px 0;
            }

            .auth-buttons {
                margin-top: 10px;
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Energy Gym
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                


                <div class="collapse navbar-collapse justify-content-between" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Schedule" asp-action="Index">Розклад</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trainings" asp-action="Index">Тренування</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trainers" asp-action="Index">Тренери</a>
                        </li>
                         @if (User.IsInRole("user"))
                            {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TrainingRegistration" asp-action="MyTrainings">Мої тренування</a>
                        </li>
                            }
                            @if (User.IsInRole("Trainer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="TrainerDashboard" asp-action="Index">Мої тренування</a>
                                </li>
                            }

                            
                         @if (User.IsInRole("admin"))
                            {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Roles" asp-action="UserList">Керування ролями</a>
                        </li>
                            }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ToDo" asp-action="Index">To-Do List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Game" asp-action="Canvas">Гра</a>
                        </li>
                        

                    </ul>

                    <div class="auth-buttons">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span>@User.Identity.Name</span>
                            <form method="post" asp-controller="Account" asp-action="Logout" style="display:inline;">
                                <input type="submit" value="Вийти" />
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login">Вхід</a>
                            <a asp-controller="Account" asp-action="Register">Реєстрація</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            &copy; 2025 - Energy Gym |
            <a asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
